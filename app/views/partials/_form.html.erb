<%= form_for @partial, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :text, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :text, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :background_color, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :background_color, :class => 'text-field form-control' %>
    </div>
  </div>
<%= f.hidden_field :post_id,:value=> params[:post_id] , :class => 'text-field form-control' %>
  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  partials_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
